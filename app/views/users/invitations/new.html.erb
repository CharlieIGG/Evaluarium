<div class="container">
  <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post} do |f| %>
    <%= render 'components/section_header', title: t("devise.invitations.new.header") do %>
      <div class="actions">
        <%= f.submit t("devise.invitations.new.submit_button"), class: 'btn btn-secondary sticky-button btn-lg py-3' %>
      </div>
    <% end %>
    <div class="card">
      <div class="card-body">
        <%= render 'devise/shared/error_messages', resource: f.object %>
        <p>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email, type: 'email', class: "form-control" %>
            <small class="text-primary"><%= t 'features.invites.email_helper_text' %></small>
          </div>
          <div class="form-group">
            <h3>Roles</h3>
            <div class="row">
              <div class="col-sm-12 col-md-6">
                <label for="roles">Role</label>
                <%= select_tag 'roles[0][name]', options_for_select(["Member", "Admin"]),
                                     include_hidden: false, value: "Member",
                                     multiple: false,
                                     class:"form-control select--main auto-select2 select-select2"%>
              </div>
              <div class="col-sm-12 col-md-6">
                <label for="roles">Resource</label>
                <%= select_tag 'roles[0][resource_id]', options_for_select([["Some Startup", 1], ["Kleen NRG", 2]]),
                                     include_hidden: false, value: 2,
                                     multiple: false,
                                     class:"form-control select--main auto-select2 select-select2"%>
              </div>
            </div>
          </div>
        </p>
      </div>
    </div>
  <% end %>
</div>
