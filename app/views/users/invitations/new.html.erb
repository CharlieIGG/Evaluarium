<div class="container">
  <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post} do |f| %>
    <%= render 'components/section_header', title: t("devise.invitations.new.header") do %>
      <div class="actions">
        <%= f.submit t("devise.invitations.new.submit_button"), class: 'btn btn-secondary sticky-button btn-lg py-3' %>
      </div>
    <% end %>
    <div class="card">
      <div class="card-body">
        <%= render 'devise/shared/error_messages', resource: f.object %>
        <p>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email, type: 'email', class: "form-control" %>
            <small class="text-primary"><%= t 'features.invites.email_helper_text' %></small>
          </div>
          <div class="form-group">
            <label for="roles">Roles</label>
            <%= select_tag 'roles[0]', options_for_select(["Member", "Admin"]),
                                     include_hidden: false, selected: "member",
                                     multiple: true,
                                     class:"form-control select--main auto-select2 select-select2"%>
            <%= select_tag 'roles[0]', options_for_select(%w[foo bar baz]) %>
            <%= select_tag 'roles[1]', options_for_select(%w[foo bar baz]) %>
          </div>
        </p>
      </div>
    </div>
  <% end %>
</div>
