<div class="container">
  <%= render 'components/section_header', title: User.model_name.human(count: 2) do %>
    <div class="actions">
      <%= link_to 'Add User', new_user_invitation_path, class: 'btn btn-secondary sticky-button btn-lg py-3' %>
    </div>
  <% end %>
  <div class="card">
    <div class="card-body table-responsive">
      <table class="table table-striped table-borderless table-light">
        <thead>
          <tr>
            <th><%= t User.human_attribute_name :name  %></th>
            <th><%= t User.human_attribute_name :email  %></th>
            <th><%= t User.human_attribute_name :phone  %></th>
            <th><%= t User.human_attribute_name :position  %></th>
            <th><%= t User.human_attribute_name :invitation_sent_at  %></th>
            <th><%= t User.human_attribute_name :invitation_accepted_at  %></th>
            <th><%= t User.human_attribute_name :invited_by  %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @deco_users.each do |deco_user| %>
            <tr>
              <td><%= deco_user.html_attr(:name) %></td>
              <td><%= deco_user.email %></td>
              <td><%= deco_user.html_attr(:phone) %></td>
              <td><%= deco_user.html_attr(:position) %></td>
              <td><%= deco_user.html_attr(:invitation_sent_at) %></td>
              <td><%= deco_user.html_attr(:invitation_accepted_at) %></td>
              <td><%= deco_user.html_attr(:invited_by) %></td>
              <td>
                <div class="dropdown">
                  <button class="btn btn-outline-primary dropdown-toggle btn-sm" type="button" id="<%= "user_#{deco_user.id}_options" %>" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <%= t 'Actions' %>
                  </button>
                  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="#">Action</a>
                    <a class="dropdown-item" href="#">Another action</a>
                    <a class="dropdown-item" href="#">Something else here</a>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
